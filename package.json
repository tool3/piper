{
  "name": "piper",
  "version": "1.0.0",
  "description": "data pipe",
  "bin": {
    "piping-server": "dist/src/index.js"
  },
  "main": "dist/src/piping.js",
  "types": "dist/src/piping.d.ts",
  "scripts": {
    "generate-version": "sh -c \"echo 'export const VERSION = \\\"${npm_package_version}\\\";' > src/version.ts\"",
    "build": "npm run generate-version && tsc && cp src/index.html src/style.css dist/src/",
    "start": "npm run build && node dist/src/index.js",
    "lint": "tslint 'src/**/*.ts' && tslint 'test/**/*.ts'",
    "prepare": "npm run build",
    "test": "mocha --require ts-node/register --timeout 10000 test/**/*.ts"
  },
  "keywords": [
    "http",
    "piping",
    "data-transfer",
    "server",
    "transfer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tool3/piper.git"
  },
  "author": "Tal Hayut",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^8.0.2",
    "@types/node": "^14.11.1",
    "@types/power-assert": "^1.5.3",
    "@types/request": "^2.48.5",
    "@types/yargs": "^15.0.6",
    "espower-typescript": "^9.0.2",
    "get-port": "^5.1.1",
    "mocha": "^7.2.0",
    "power-assert": "^1.6.1",
    "request": "^2.88.2",
    "then-request": "^6.0.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "log4js": "^6.2.1",
    "multiparty": "^4.2.2",
    "yargs": "^16.0.3"
  }
}
